<div class="container mt-5">
	<div class="row d-flex justify-content-center">
		<div class="col-md-6">
            <form action="/resetpassword" method="post">

                <div
					class="card px-5 py-5"
					id="form1"
				>
					<h1 class="card-h1">Reset your password</h1>
                    <p>Please enter your email address associated with your user account below. An email with instructions on how to reset your password will be sent to you.</p>
					<div
						class="form-data"
						v-if="!submitted"
					>
						<div class="forms-inputs mb-4">
							<span>Email</span>
							<input
								type="email"
								name="email"
								id="email"
								placeholder="your email address"
								required
							/>
						</div>
                     </div>

                     <div class="mb-3">
                        <button
                            type="submit"
                            class="btn button login-button"
                        >
                            Send
                        </button>
                    </div> 
                </div>     
                 
                
            </form>

			<div class="mb-3 back-to-login">
				<a href="/login">login</a>
			</div>
        </div>
    </div>
</div>